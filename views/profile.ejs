<!DOCTYPE html>
<head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/css/bootstrap.min.css" integrity="sha384-SI27wrMjH3ZZ89r4o+fGIJtnzkAnFs3E4qz9DIYioCQ5l9Rd/7UAa8DHcaL8jkWt" crossorigin="anonymous">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="../css/register.css">
        <link rel="stylesheet" href="../css/main.css">

</head>
<body>
        <div class="container">
                <div class="row" style="padding-bottom: 50px;">
                        <div class="col" >
                                <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
                                        <a class="navbar-brand" href="#">
                                                <img src="/img/image.png" width="30" height="30"/>
                                                Attendance Managment</a>
                                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                                <span class="navbar-toggler-icon"></span>
                                        </button>
                                        <div class="collapse navbar-collapse" id="navbarNav">
                                                <ul class="navbar-nav">
                                                <li class="nav-item" >
                                                        <a class="nav-link" href="/u">Home</a>
                                                </li>
                                                <li class="nav-item active">
                                                        <a class="nav-link" href="/u/profile">Courses</a>
                                                </li>
                                                <li class="nav-item">
                                                        <a class="nav-link" href="#">Report</a>
                                                </li>
                                                <li class="nav-item">
                                                        <a class="nav-link" href="/u/logout">Logout</a>
                                                </li>
                                                </ul>
                                        </div>
                                </nav>
                        </div>
                </div>
                <div class="row">
                        <div class="col-12">
                                <div class="jumbotron-fluid" style="padding-top: 50px;">
                                        <h5 class="display-4">Hello, <%= user %>!</h5>
                                        <p class="lead">Welcome to Attendance Manager. Here you can view your currently enrolled courses and add new, if any.</p>
                                        <hr class="my-4">
                                </div>
                        </div>
                </div>
                <div class="row">
                    <h4 class="col-12">Currently enrolled courses:</h4><br>
                </div>
                <div class="row">
                    <div class="col-12 mt-1">
                            <ul class="list-group" id="course-list">
                                <% if(locals.courses) { %>
                                <% courses.forEach((course) => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%= course.name %>
                                        <span class="badge badge-primary badge-pill" id="<%= course.name %>_bunked"><%= course.no_bunked%></span>
                                </li>
                                <% });} %> 
                            </ul>
                    </div>
                </div>
                
                <div class="row">
                        <div class="col-12 mt-5">
                                <h4>Add a course</h4>
                                <form id="form-add">
                                        <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Course Name" id="input-course" required>
                                        </div>
                                        <div class="form-group">
                                                <input type="number" class="form-control" placeholder="Maximum number of classes you can bunk" id="input-course" required>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Add course</button>
                                        </div>
                                </form>
                        </div>
                </div>
                <div class="row">
                        <div class="col-12 mt-5">
                                <h4>Remove a course</h4>
                                <form id="form-remove">
                                        <div class="form-group">
                                                <select class="form-control" name="name">
                                                        <option selected disabled>Select the course which you want to remove</option>
                                                        <% courses.forEach((course)=>{ %>
                                                        <option><%= course.name %></option>
                                                        <% }); %>
                                                </select>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-danger" id="btn-remove">Remove course</button>
                                        </div>
                                </form>
                        </div>
                </div>

                <div class="row">
                        <div class="col-12 mt-5">
                                <h4>Edit attendance</h4>
                                <form id="form-edit" onsubmit="editCourse()">
                                        <div class="form-group">
                                                <select name = "name" class="form-control" id="course-select-edit">
                                                        <option selected disabled>Select the course which you want to remove</option>
                                                        <% courses.forEach((course)=>{ %>
                                                        <option><%= course.name %></option>
                                                        <% }); %>
                                                </select>
                                        </div>
                                        <div class="form-group form-inline">
                                                <input name="num" class="form-control" type="number" id="change-num">
                                                <button type="submit" class="btn btn-info" id="btn-change">Change</button>
                                        </div>
                                </form>
                        </div>
                </div>

        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js" integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P" crossorigin="anonymous"></script>
        <script src="../js/details.js"></script>
</body>
